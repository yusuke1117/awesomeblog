<% provide(:title, 'Users') %>
<div class="container">
    <div class="jumbotron mt-4">
        <h1 class="text-center">List of Users</h1>
        　　 <%= will_paginate %>
                <ul class="users">
                    <% @users.each do |user| %>
                        <li>
                            <%= gravatar_for user, size: 52 %>
                            <%= link_to user.name, user %>
                            <%= link_to 'delete', user_path(user), method: :delete,
                                                        data: { confirm: "Are you sure?" } %>
                        </li>
                <% end %>
                </ul>
                <%= will_paginate%>
    </div>
</div>