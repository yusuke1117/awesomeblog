                    <h1 class="awesome text-center text-white">Susukino</h1>
                </div>

            <div class="row junbotron">
                <div class="col-8">
                    <div class="jumbotron">
                            <h3 class="text-center text-black">aaaaaaaa</h3>
                            <p class="text-center text-white">aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa</p>
                    </div>
                </div>
                <div class="col-4">
                    <div class="container susukinogazou"></div>
                </div>
            </div>
        </div>
    <% end %>
