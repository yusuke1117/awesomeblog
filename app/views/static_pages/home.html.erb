<% if logged_in? %>
<div class="container">
    <div class="row">
        <aside class="col-3 post">
            <section class="mt-4">
                <!-- This is were you put your gravatar and name -->
                <%= render 'shared/user_info' %>
                <!-- link to show profile page-->
                <span>
                    <%= link_to "View my profile", current_user, class: "text-center" %>
                </span>
            </section>
            <section>
                <%= render 'shared/stats' %>
            </section>
            <section>
                <%= render 'shared/micropost_form' %>
            </section>
    </aside>        
        <!-- This is wehre you put your micropost -->
        <div class="col-9">   
            <h3>Micropost Feed</h3>
